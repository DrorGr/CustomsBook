{
    "useTabs": true,
    "semi": true,
    "bracketSpacing": true,
    "emptyLines": "always",
    "arrowParens": "always",
    "proseWrap": "always",
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 6
            }
        }
    ]
}